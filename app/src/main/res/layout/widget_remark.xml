<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/remarkLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/spinner_background_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remarkNameZhLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公会"
            android:textSize="16sp"
            android:textColor="@color/poolTextColor"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/remarkNameEnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guild"
            android:textSize="14sp"
            android:textColor="@color/poolTextColor"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/remarkEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/poolTextColor"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
